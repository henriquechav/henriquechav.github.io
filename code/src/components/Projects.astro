---

<section class="container-main">
  <h2 class="section-title mb-8">
    Meus Projetos
  </h2>

  <div class="grid grid-cols-1 items-start gap-8 md:grid-cols-2 lg:grid-cols-3">
    {projects.map((project) => (
      <article class="rounded-3xl border-2 border-my-border overflow-hidden">
        <div class="aspect-video">
          <img 
            src={project.image}
            alt={project.title}
            class="w-full h-full object-cover"
          />
        </div>

        <div class="p-4">
          <h3 class="text-xl mb-2 font-bold">{project.title}</h3>

          <p class="text-sm mb-4 leading-relaxed text-my-gray">{project.description}</p>

          <a href={project.link} class="font-semibold text-my-blue">Ver projeto</a>
        </div>
      </article>
    ))}
  </div>
</section>

