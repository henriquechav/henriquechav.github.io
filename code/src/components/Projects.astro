const projects = [
  {
    title: "Meu Portf√≥lio",
    description: "Um site simples feito em Astro para mostrar meus projetos em tech.",
    link: "https://github.com/henriquechav/henriquechav.github.io",
    image: "/portfolio-thumb.png",
  },
  {
    title: "Euzinho",
    description: "Eu mesmo como projeto para testar o funcionamento dos cards.",
    link: "#",
    image: "/foto-perfil.png",
